  "dependencies": {
    "ts-json-schema-generator": "^0.93.0",
    "ts-node": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  }
}
